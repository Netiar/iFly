<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragments.SingleScholarFragment">

        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/academic_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Academic details"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textColor="@color/maroon"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cont_academic"
            android:background="@drawable/layout_design"
            android:backgroundTint="@color/brown1"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/academic_details"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/primary_school"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Primary School"
                android:textColor="@color/maroon"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
               app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/primary_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary School"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toBottomOf="@id/primary_school"
                app:layout_constraintStart_toStartOf="@id/primary_school"/>

            <TextView
                android:id="@+id/primary_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Primary School"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="textEnd"
                android:layout_marginEnd="12dp"
                app:layout_constraintTop_toTopOf="@id/primary_marks"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/primary_marks"
                />

            <TextView
                android:id="@+id/high_school"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Primary School"
                android:textColor="@color/maroon"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/primary_marks"
                app:layout_constraintStart_toStartOf="@id/primary_marks"
                />

            <TextView
                android:id="@+id/high_marks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary School"
                android:layout_marginStart="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toBottomOf="@id/high_school"
                app:layout_constraintStart_toStartOf="@id/high_school"/>

            <TextView
                android:id="@+id/high_grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Primary School"
                android:layout_marginEnd="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textAlignment="textEnd"
                app:layout_constraintTop_toTopOf="@id/high_marks"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/high_marks"
                />




        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/personal_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal info"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textColor="@color/maroon"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toBottomOf="@id/cont_academic"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cont_personal_info"
            android:layout_width="match_parent"
            android:background="@drawable/layout_design"
            android:layout_margin="8dp"
            android:backgroundTint="@color/brown1"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/personal_info"
            app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/branch_origin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Junior School"
                android:layout_margin="6dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Junior School"
                android:layout_margin="6dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/branch_origin"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email: None"
                android:layout_margin="6dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/phone"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/create_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="update details"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/professional_certifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Professional Certifications"
            android:textColor="@color/maroon"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toBottomOf="@id/cont_personal_info"
            app:layout_constraintBottom_toTopOf="@id/rec_professional_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/add_professional_certifications"
            android:textAlignment="textStart"
            />

        <TextView
            android:id="@+id/add_professional_certifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:textColor="@color/maroon"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="@id/professional_certifications"
            app:layout_constraintBottom_toBottomOf="@id/professional_certifications"
            app:layout_constraintStart_toEndOf="@id/professional_certifications"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="textEnd"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_professional_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/activity_scholar_proffesional_info"
            app:layout_constraintTop_toBottomOf="@id/professional_certifications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>