<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_design"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/position"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toStartOf="@id/scholar_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_margin="4dp"
        />
    <TextView
        android:id="@+id/scholar_name"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Charles Muvaka Kata"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="@id/position"
        app:layout_constraintEnd_toStartOf="@id/scholar_grade"
        app:layout_constraintStart_toEndOf="@id/position"
        app:layout_constraintBottom_toBottomOf="@id/position"/>

    <TextView
        android:id="@+id/scholar_grade"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="A"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="@id/scholar_name"
        app:layout_constraintEnd_toStartOf="@id/scholar_points"
        app:layout_constraintStart_toEndOf="@id/scholar_name"
        app:layout_constraintBottom_toBottomOf="@id/scholar_name"/>

    <TextView
        android:id="@+id/scholar_points"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="81"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintTop_toTopOf="@id/scholar_grade"
        app:layout_constraintStart_toEndOf="@id/scholar_grade"
        app:layout_constraintBottom_toBottomOf="@id/scholar_grade"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>