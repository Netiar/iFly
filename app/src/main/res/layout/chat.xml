<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:backgroundTint="@color/maroon3"
    android:background="@drawable/layout_design">

<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/image"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:padding="4dp"
    android:src="@drawable/profile2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:shapeAppearanceOverlay="@style/circle" />

<TextView
    android:id="@+id/scholar_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:text="Brad Pitt"
    android:textColor="@color/maroon"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    android:textSize="25sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@id/scholar_status"
    app:layout_constraintStart_toEndOf="@id/image"
    app:layout_constraintTop_toTopOf="@id/image" />

<TextView
    android:id="@+id/scholar_status"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="available"
    android:textAppearance="@style/TextAppearance.AppCompat.Large"
    app:layout_constraintStart_toStartOf="@+id/scholar_name"
    app:layout_constraintTop_toBottomOf="@+id/scholar_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
