<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/frameLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/maroon2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".fragments.EditInfoFragment">

            <!-- TODO: Update blank fragment layout -->
            <View
                android:id="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/layout_design"
                android:backgroundTint="@color/maroon3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cont_academic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/layout_design"
                android:backgroundTint="@color/maroon2"
                app:layout_constraintBottom_toTopOf="@id/personal_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/academic_details"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Contact details"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/maroon"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/call"
                    app:layout_constraintEnd_toStartOf="@id/update"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/call"
                    android:layout_width="100dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="@id/high_school"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/academic_details"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/call" />

                <TextView
                    android:id="@+id/primary_school"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="8dp"
                    android:text="Primary School"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/call"
                    app:layout_constraintTop_toBottomOf="@id/academic_details" />

                <TextView
                    android:id="@+id/primary_marks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="8dp"
                    android:text="Primary School"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/call"
                    app:layout_constraintTop_toBottomOf="@id/primary_school" />


                <TextView
                    android:id="@+id/high_school"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_mail"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/maroon"
                    android:text="Primary School"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/call"
                    app:layout_constraintTop_toBottomOf="@id/primary_marks" />

                <TextView
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/marks"
                    android:padding="6dp"
                    android:text="Update"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/academic_details" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/personal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/marks"
                android:backgroundTint="@color/brown"
                android:padding="8dp"
                android:text="Professional certifications"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/topView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topView" />

            <View
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/layout_design"
                android:backgroundTint="@color/maroon3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/personal_info" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cont_personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/layout_design"
                android:backgroundTint="@color/maroon2"
                app:layout_constraintBottom_toTopOf="@id/professional_certifications"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/content">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:text="Junior School"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.skydoves.transformationlayout.TransformationLayout
                    android:id="@+id/transform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toLeftOf="@id/edit_professional_certifications"
                    app:layout_constraintStart_toStartOf="@id/recView"
                    app:layout_constraintTop_toBottomOf="@id/recView"
                    app:transformation_duration="450"
                    app:transformation_targetView="@id/card">

                    <TextView
                        android:id="@+id/skillSet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/marks"
                        android:padding="8dp"
                        android:text="Choose a skillset"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </com.skydoves.transformationlayout.TransformationLayout>

                <TextView
                    android:id="@+id/edit_professional_certifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableEnd="@drawable/ic_add_circle_24"
                    android:drawablePadding="2dp"
                    android:text="certifications"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/maroon"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/transform"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/transform" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/professional_certifications"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Employment History"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/brown"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/cont4"
                app:layout_constraintEnd_toStartOf="@id/transform1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cont_personal_info" />

            <com.skydoves.transformationlayout.TransformationLayout
                android:id="@+id/transform1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/professional_certifications"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/professional_certifications"
                app:layout_constraintTop_toTopOf="@id/professional_certifications"
                app:transformation_duration="450"
                app:transformation_targetView="@id/card">

                <TextView
                    android:id="@+id/add_professional_certifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableEnd="@drawable/ic_add_circle_24"
                    android:drawablePadding="2dp"
                    android:text="Add"
                    android:textAlignment="textEnd"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/maroon"

                    android:textStyle="bold" />


            </com.skydoves.transformationlayout.TransformationLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cont4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/layout_design"
                android:backgroundTint="@color/maroon2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/professional_certifications">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/warning"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/warn" />

                <TextView
                    android:id="@+id/check_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Get called for interviews!!"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/warning"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/warning"
                    app:layout_constraintTop_toTopOf="@id/warning" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_professional_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/leaders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leadership responsibilities"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/brown"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cont4" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/leadersRec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/maroon2"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/leaders" />

            <com.skydoves.transformationlayout.TransformationLayout
                android:id="@+id/transform2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/leadersRec"
                app:transformation_duration="450"
                app:transformation_targetView="@id/card">

                <TextView
                    android:id="@+id/add_leadership"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableEnd="@drawable/ic_add_circle_24"
                    android:drawablePadding="2dp"
                    android:text="Leadership"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/maroon"
                    android:textStyle="bold" />


            </com.skydoves.transformationlayout.TransformationLayout>

            <com.skydoves.transformationlayout.TransformationLayout
                android:id="@+id/transform3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/transform2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/transform2"
                app:layout_constraintTop_toTopOf="@id/transform2"
                app:transformation_duration="450"
                app:transformation_targetView="@id/contResume">

                <TextView
                    android:id="@+id/resume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/marks"
                    android:backgroundTint="@color/brown"
                    android:padding="8dp"
                    android:text="See your resume"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </com.skydoves.transformationlayout.TransformationLayout>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/maroon"
                android:elevation="12dp"
                android:paddingTop="10dp"
                app:cardCornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/skills"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/layout_design"
                    android:backgroundTint="@color/maroon2"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/topic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Select your skillSet"
                        android:textAlignment="textStart"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/maroon"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/cancel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:drawableStart="@drawable/ic_cancel"
                        android:drawableTint="@color/maroon"
                        app:layout_constraintBottom_toBottomOf="@id/topic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/topic" />

                    <RadioGroup
                        android:id="@+id/answers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/topic">

                        <RadioButton
                            android:id="@+id/radio_ans1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="pirates"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <RadioButton
                            android:id="@+id/radio_ans2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="pirates"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


                        <RadioButton
                            android:id="@+id/radio_ans3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="pirates"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


                        <RadioButton
                            android:id="@+id/radio_ans4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="pirates"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    </RadioGroup>

                    <TextView
                        android:id="@+id/submit2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/marks"
                        android:padding="10dp"
                        android:text="submit"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/answers" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/leaderRoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/layout_design"
                    android:backgroundTint="@color/maroon2"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/slogan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Add leadership role"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/maroon"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/cancel1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/cancel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:drawableStart="@drawable/ic_cancel"
                        android:drawableTint="@color/maroon"
                        app:layout_constraintBottom_toBottomOf="@id/slogan"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/slogan" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/first_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/slogan"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/maroon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter role "
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/scholar_id"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/first_name"
                        app:passwordToggleTint="@color/maroon"
                        app:startIconDrawable="@drawable/ic_home"
                        app:startIconTint="@color/maroon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Place you performed the role" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="4dp"
                        android:background="@drawable/marks"
                        android:padding="10dp"
                        android:text="submit"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/scholar_id" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/empRoles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/layout_design"
                    android:backgroundTint="@color/maroon2"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/slogan1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Add Employment role"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/maroon"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/cancel2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/cancel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:drawableStart="@drawable/ic_cancel"
                        android:drawableTint="@color/maroon"
                        app:layout_constraintBottom_toBottomOf="@id/slogan1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/slogan1" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/role_name"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/slogan1"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="@color/maroon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter employment role "
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/role_id"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/role_name"
                        app:startIconDrawable="@drawable/ic_work"
                        app:startIconTint="@color/maroon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter work place" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/start_id"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:layout_constraintEnd_toStartOf="@id/end_id"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/role_id"
                        app:passwordToggleTint="@color/maroon"
                        app:startIconDrawable="@drawable/ic_event"
                        app:startIconTint="@color/maroon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="start (dd/mm/yy)" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/end_id"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/start_id"
                        app:layout_constraintTop_toBottomOf="@id/role_id"
                        app:passwordToggleTint="@color/maroon"
                        app:startIconDrawable="@drawable/ic_event"
                        app:startIconTint="@color/maroon">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="end (dd/mm/yy)" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/submit1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/marks"
                        android:padding="8dp"
                        android:text="submit"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/start_id" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contResume"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/maroon2"
